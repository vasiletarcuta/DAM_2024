<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificareCalitateAsiguratActivity"
    android:background="#d4e6f1">

    <TextView
        android:id="@+id/tvCalitateAsigurat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verificare Calitate Asigurat"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="177dp"
        android:textSize="70px"
        android:paddingTop="25px"
        android:paddingBottom="25px"
        android:textAlignment="center"
        android:background="#1d174b"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IntroduceÈ›i CNP-ul:"
        android:paddingTop="400px"
        app:layout_constraintBottom_toTopOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCalitateAsigurat"
        android:textSize="60px"
        />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="307dp"
        android:layout_height="55dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="CNP"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button"
        android:layout_width="171dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="Verificare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        android:backgroundTint="#1d174b"/>
</androidx.constraintlayout.widget.ConstraintLayout>